<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hr_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity android:name=".ValidateAbsenceActivity"
            android:parentActivityName=".HRMenuActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HRMenuActivity"/>
        </activity>
        <activity android:name=".MyAbsencesActivity"
            android:parentActivityName=".MenuActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity"/>
        </activity>
        <activity android:name=".HRMenuActivity" />
        <activity
            android:name=".MenuActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".ModifyRequestAbsenceActivity"/>
        <activity
            android:name=".ModifyPersonActivity"
            android:parentActivityName=".PersonListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PersonListActivity" />
        </activity>
        <activity
            android:name=".AddPersonActivity"
            android:parentActivityName=".PersonListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PersonListActivity" />
        </activity>
        <activity android:name=".PersonListActivity"
            android:parentActivityName=".HRMenuActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HRMenuActivity"/>
        </activity>
        <activity
            android:name=".RequestAbsencesActivity"
            android:parentActivityName=".MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>