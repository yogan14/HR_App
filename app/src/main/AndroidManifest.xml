<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hr_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.mgmt.LoginActivity"></activity>
        <activity
            android:name=".ui.ValidateAbsenceActivity"
            android:parentActivityName=".ui.HRMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HRMenuActivity" />
        </activity>
        <activity
            android:name=".ui.MyAbsencesActivity"
            android:parentActivityName=".ui.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MenuActivity" />
        </activity>
        <activity android:name=".ui.HRMenuActivity" />
        <activity
            android:name=".ui.MenuActivity"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>
        <activity android:name=".ui.ModifyRequestAbsenceActivity" />
        <activity
            android:name=".ui.ModifyPersonActivity"
            android:parentActivityName=".ui.PersonListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.PersonListActivity" />
        </activity>
        <activity
            android:name=".ui.AddPersonActivity"
            android:parentActivityName=".ui.PersonListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.PersonListActivity" />
        </activity>
        <activity
            android:name=".ui.PersonListActivity"
            android:parentActivityName=".ui.HRMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HRMenuActivity" />
        </activity>
        <activity
            android:name=".ui.RequestAbsencesActivity"
            android:parentActivityName=".ui.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MenuActivity" />
        </activity>
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>