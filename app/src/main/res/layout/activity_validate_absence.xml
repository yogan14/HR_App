<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ValidateAbsenceActivity">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:onClick="validateDenied"
        app:layout_constraintEnd_toEndOf="@+id/textContainer"
        app:layout_constraintTop_toBottomOf="@+id/date_field"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/textContainer"
        android:layout_width="282dp"
        android:layout_height="264dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/collaborator_field"
        android:layout_width="82dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:text="Isami Aldini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textContainer" />

    <TextView
        android:id="@+id/cause_of_absence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sickness"
        app:layout_constraintEnd_toEndOf="@+id/collaborator_field"
        app:layout_constraintStart_toStartOf="@+id/collaborator_field"
        app:layout_constraintTop_toBottomOf="@+id/collaborator_field" />

    <TextView
        android:id="@+id/date_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="21.12.2020-23.12.2020"
        app:layout_constraintEnd_toEndOf="@+id/cause_of_absence"
        app:layout_constraintStart_toStartOf="@+id/cause_of_absence"
        app:layout_constraintTop_toBottomOf="@+id/cause_of_absence" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:onClick="validateAccepted"
        app:layout_constraintStart_toStartOf="@+id/textContainer"
        app:layout_constraintTop_toBottomOf="@+id/date_field"
        app:srcCompat="@android:drawable/checkbox_on_background" />
</androidx.constraintlayout.widget.ConstraintLayout>